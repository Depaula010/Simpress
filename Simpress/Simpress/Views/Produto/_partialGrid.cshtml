
@{
    ViewBag.Title = "_partialGrid";
}

<form id="formCadastro" method="post">
    <hr />
    <div class="row">
        <div class="form-group col-md-12">
            <label for="Nome">Nome:</label>
            <input required="required" type="text" class="form-control" id="Nome" name="Nome" placeholder="Ex.: Celular" maxlength="250">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-12">
            <label for="Descricao">Descricao:</label>
            <input required="required" type="text" class="form-control" id="Descricao" name="Descricao" placeholder="Ex.: Marca" maxlength="250">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4 col-sm-4">
            <label class="control-label">Categoria produto</label>
            <select class="form-control" name="CategoriaID" id="CategoriaID">
                @foreach (var item in ViewBag.Categorias)
                {
                    <option value="@item.Id">@item.Nome</option>
                }
            </select>
        </div>

        <div class="form-group col-md-4 col-sm-4">
            <input required="required" type="checkbox" id="Perecivel" name="Perecivel">
            <label for="Nacionalidade">Perecivel:</label>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="pull-right">
                <button type="submit" class="btn btn-sm btn-primary" onclick="Cadastrar()">Cadastrar</button>
            </div>
        </div>
    </div>


</form>

